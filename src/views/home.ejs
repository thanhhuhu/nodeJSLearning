<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<style>
    body {
        background-color: #f8f9fa; /* nền xám nhạt nhẹ */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border: none;
        font-weight: 500;
        padding: 8px 16px;
    }

    .btn-warning:hover {
        background-color: #ec9a2c;
    }

    table {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        margin: 20px auto;
    }

    thead {
        background-color: #343a40;
        color: white;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
        padding: 12px;
    }

    tr:hover {
        background-color: #f1f1f1;
        transition: 0.2s ease;
    }

    button {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        margin: 3px 0;
        font-size: 0.9rem;
        transition: background-color 0.2s ease;
    }

    button:hover {
        background-color: #5a6268;
    }

    .container {
        max-width: 1100px;
        margin: auto;
    }
</style>
<body>
<div>
    <h1>List users: <%= JSON.stringify()%></h1>
    <div>
        <button href="/create-user" class="btn btn-warning">Create a new user</button>
    </div>

    <div>
        <h4>Table</h4>
    </div>
    <div>
        <table class="table table-hover" style="width:1000px;justify-content: center " id="">
            <thead>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </thead>
            <tbody>
            <%users.forEach(function(user){ %>
                <tr>
                    <td><%= user.id%></td>
                    <td><%= user.name%></td>
                    <td><%= user.email%></td>
                    <td><%= user.address%></td>
                    <td>
                        <button>Delete</button>
                        <br>
                        <button>Change information</button>
                    </td>
                </tr>
            <%})%>

            </tbody>
        </table>
    </div>
</div>

</body>
</html>